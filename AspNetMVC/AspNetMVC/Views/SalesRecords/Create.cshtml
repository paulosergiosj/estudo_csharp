@model AspNetMVC.Models.ViewModel.SalesRecordFormViewModel;
@using AspNetMVC.Models.Enums;
@using System;
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                
                <input type="hidden" asp-for="SalesRecord.Date" hidden class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <input asp-for="SalesRecord.Amount" class="form-control" />
                <span asp-validation-for="SalesRecord.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <select asp-for="SalesRecord.Status" asp-items="@(new SelectList(Enum.GetValues(typeof(SaleStatus))))" disabled class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.SellerID" class="control-label"></label>
                <select asp-for="SalesRecord.SellerID" asp-items="@(new SelectList(Model.Sellers,"ID",
                                                                    "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


